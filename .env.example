# Turn this to false once you add real provider keys.
ALLOW_MOCK_RESPONSES=true

# Core experiment settings
DEBATE_ROUNDS=1
DEBATE_MAX_OUTPUT_TOKENS=280
LLM_TIMEOUT_MS=90000
# Temporary mode for Gemini-only testing across all 4 conditions.
FORCE_GEMINI_ONLY=true
SERIALIZE_CONDITIONS=true

# OpenAI / ChatGPT
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4.1-mini
OPENAI_BASE_URL=https://api.openai.com/v1

# Anthropic / Claude
ANTHROPIC_API_KEY=
ANTHROPIC_MODEL=claude-3-7-sonnet-latest
ANTHROPIC_BASE_URL=https://api.anthropic.com
ANTHROPIC_VERSION=2023-06-01

# Google / Gemini
GEMINI_API_KEY=
GEMINI_MODEL=gemini-2.5-flash
GEMINI_BASE_URL=https://generativelanguage.googleapis.com/v1beta
# Keep fallbacks conservative unless you've confirmed availability via ListModels.
GEMINI_FALLBACK_MODELS=gemini-flash-latest
GEMINI_REQUEST_SPACING_MS=6000
GEMINI_MAX_RETRIES=2
GEMINI_RETRY_BACKOFF_MS=3000

# xAI / Grok
XAI_API_KEY=
XAI_MODEL=grok-2-latest
XAI_BASE_URL=https://api.x.ai/v1
